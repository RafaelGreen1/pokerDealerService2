<Page
    x:Class="pokerDealerApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pokerDealerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Margin="202,10,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="Poker Dealer" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" FontStyle="Italic"/>
        <Button x:Name="btnSignIn" Content="Sign in" HorizontalAlignment="Left" Margin="413,179,0,0" Grid.RowSpan="2" VerticalAlignment="Top" FontSize="48" Click="btnSignIn_Click"/>
        <Button x:Name="btnLogIn" Content="Log in" HorizontalAlignment="Left" Margin="49,179,0,0" Grid.RowSpan="2" VerticalAlignment="Top" FontSize="48"/>

    </Grid>
</Page>
